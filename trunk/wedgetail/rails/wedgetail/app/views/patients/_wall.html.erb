<% for @post in @wall %>
		<% if @post.narrative_type_id==17%>
	  	<%= @post.content%> [post]<br>
		<% else %>
			
			<%= @post.title%><%= " ["+@post.narrative_type.narrative_type_name+"]" if @post.narrative_type %> <%= link_to ' Show',narrative_path(:id=> @post) %><br>
		<%end %>
		<%= "<font size=-1>"+@post.narrative_date.strftime("%d/%m/%y")+"</font>" if @post.narrative_date%>
  	<%= "  <font size=-1><b>"+ @post.author + "</b></font>" if @post.author and @post.author!=""%>
    <%= "  <font size=-1><b>["+ @post.condition.name + "]</b></font>" if @post.condition_id!=0%>
		<hr>
<% end %>