<div class="wedgetail-form">
	<fieldset>
		<legend>Patient Details</legend>
	<h3><%= h(@patient.family_name+", "+@patient.given_names)-%>
	<%= h(" \""+@patient.known_as+ "\"")	unless @patient.known_as.blank? -%>
	</h3>
	<b>DOB</b>  <%= @patient.dob.day %>/<%= @patient.dob.month%>/<%= @patient.dob.year-%>
	&nbsp; &nbsp;<b>Address</b>  <%= @patient.address_line+", "+@patient.town%>
	</fieldset>
</div>

<div class="wedgetail-form">
<h1><%= @title %></h1>
<% for @narrative in @narratives %>
	<fieldset>
		<legend><%= @narrative.narrative_date.strftime("%d/%m/%y")%>   <%= @narrative.title-%></legend>	
		<% content, partial = @narrative.convert %>
				<%= render(:partial=>partial,:object=>content)%>
		<br><hr><br>
		<%= "Created by "+ @narrative.author + "<br>" if @narrative.author && @narrative.author!=""%>

		
	</fieldset>
<% end %>
</div>
