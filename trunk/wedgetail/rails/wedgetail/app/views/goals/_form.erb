<% form_for(@goal) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :measure_id %><br />
    <%= f.collection_select :measure_id,@measures,:id,:name, { :include_blank => true } %>
  </p>


  <p>
    <%= f.label :condition_id %><br />
    <%= f.collection_select :condition_id,@conditions,:id,:name, { :include_blank => true } %>
  </p>



  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>