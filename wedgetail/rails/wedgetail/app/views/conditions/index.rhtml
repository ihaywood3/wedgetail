<h1>Listing conditions</h1>

<table>
  <tr>
  </tr>
  
<% for condition in @conditions %>
  <tr>
	<td><%= condition.name %></td>
	<td><%= condition.code %></td>
    <td><%= link_to 'Show', condition_path(condition) %></td>
    <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
    <td><%= link_to 'Destroy', condition_path(condition), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New condition', new_condition_path %>